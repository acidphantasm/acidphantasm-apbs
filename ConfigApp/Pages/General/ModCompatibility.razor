                        }
                        else if (MainLayout._appDefaultButtonToggle && _modInitialTierAppearance != 3)
                        {
                            <MudButton @onclick="defaultInitialTierAppearance" Variant="Variant.Filled" Color="Color.Dark" Size="Size.Small">Default</MudButton>
                        }
